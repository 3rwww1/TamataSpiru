	<header class="w3-container w3-white ">
		<!-- En tête Logo & Titre --> 
		
		<div class="w3-row-padding w3-layout-middle w3-padding-xxlarge">
			
			<div class="w3-col w3-layout-left" style="width:20%">
				<img src="LogoTamata.jpg" style="width:50%" >
			</div>
			
			<div class="w3-col w3-layout" style="width:30%" >
				<h3>TamataSpiru App</h3>
				<p></p>
			</div>
			
			<div class="w3-col w3-layout-right" style="width:30%">
				<img src="logospiruline.png" style="width:25%">
			</div>
		</div>
				
		<!-- Menu Tamata App --> 
		<div class="w3-row-padding w3-layout-middle" style="height:30%">
			<div class="w3-btn-bar ">
			<a href="/" class="btn btn-info btn-lg"><span class="ion-ios-home" ></span> <p class="w3-hide-small">Home</p></a>
			<a href="/stats" class="btn btn-info btn-lg"><span class="ion-ios-pulse-strong"></span> <p class="w3-hide-small">Stats</p></a>
			<a href="/sched" class="btn btn-info btn-lg"><span class="ion-calendar"></span> <p class="w3-hide-small">Sched</p></a>
			<a href="/alert" class="btn btn-info btn-lg"> <span class="ion-alert-circled"></span> <p class="w3-hide-small">Alert</p></a>
			<a href="/system" class="btn btn-info btn-lg"><span class="ion-ios-settings-strong"></span> <p class="w3-hide-small">System</p> </a>
			<a href="/remote" class="btn btn-info btn-lg" ><span class="ion-ios-game-controller-b" style="font-size: 25px;color:purple" ></span> <p class="w3-hide-small">Remote Control</p> </a>
			</div>
		</div>
	</header>

	<body class="w3-content" style="max-width:1600px" background="background.png">
		<div class="w3-container w3-padding-24 w3-white w3-center-height w3-middle">
			<p>Manage Remote access to TamataSpiru System. On/off control on Heat, Bubler & Light. </p>
		</div>

		<div class="w3-container w3-padding-24 w3-center-height w3-middle">
		<!----------------------------------------------------------------------->
		<!---------------------------- Remote Report ---------------------------->
		<!----------------------------------------------------------------------->		
		<div class="w3-container w3-padding-12 ">
		<div class="w3-container w3-padding-12 w3-cyan ">
			<div class="w3-left w3-rightbar">
				<span class="btn-lg icon ion-ios-game-controller-b w3-padding-12 w3-purple w3-border w3-middle"></span>
			</div>
			
			<!--  CONTROL POWER State ( Temp / Heat / Bubler --> 
			<!-- Temperature Button --> 
			<div class="w3-container w3-right w3-right-align">
				<%if (temperature.state) { %>
					<span class="btn-lg ">
						<a href="/remoteOrder?temperature=switch" class="btn btn-info btn-lg"><span class="ion-thermometer w3-text-red"> On</span></a>
					</span> 
				<% } else{ %>
					<span class="btn-lg ">				
						<a href="/remoteOrder?temperature=switch" class="btn btn-info btn-lg"><span class="ion-thermometer w3-text-black"> Off</span></a>
					</span> 
				<% } %>					
			</div>
			<!-- Temperature State -->
			<div class="w3-container w3-right w3-right-align">
				<%if (temperature.state) { %>
					<span class="btn-lg w3-green ">
						<span class="icon ion-ios-flame"> On</span> 
					</span>
				<% } else{ %>  
					<span class="btn-lg w3-light-grey ">
						<span class="icon ion-ios-flame-outline"> Off</span>
					</span>					
				<% } %>
			</div>		
			<!-- Light Button -->
			<div class="w3-container w3-right w3-right-align"> 
					<div class="w3-display w3-container">
						<%if (light.state) { %>
							<span class="btn-lg ">
								<a href="/remoteOrder?light=switch" class="btn btn-info btn-lg"><span class="ion-ios-lightbulb w3-text-red"> On</span></a>
							</span> 
						<% } else{ %>
							<span class="btn-lg ">				
								<a href="/remoteOrder?light=switch" class="btn btn-info btn-lg"><span class="ion-ios-lightbulb-outline w3-text-black"> Off</span></a>
							</span> 
						<% } %>
					</div>
			</div>
			<!---- Light State ---->
			<div class="w3-container w3-right w3-right-align">
				<%if (light.state) { %>
					<span class="btn-lg w3-green ">
						<span class=" icon ion-ios-lightbulb-outline"> On</span> 
					</span> 
				<% } else{ %>
					<span class="btn-lg w3-light-grey ">				
						<span class="icon ion-ios-lightbulb"> Off </span> 
					</span> 
				<% } %>
			</div>			
			<!-- Bubler Button -->
			<div class="w3-container w3-right w3-right-align">
					<div class="w3-display w3-container">
					<%if (bubler.state) { %>
						<span class="btn-lg ">
							<a href="/remoteOrder?bubler=switch" class="btn btn-info btn-lg"><span class="ion-load-a w3-text-red"> On</span></a>
						</span> 
					<% } else{ %>
						<span class="btn-lg ">				
							<a href="/remoteOrder?bubler=switch" class="btn btn-info btn-lg"><span class="ion-load-a w3-text-black"> Off</span></a>
						</span> 
					<% } %>
				</div>
			</div>
			<!-- Bubler State -->
			<div class="w3-container w3-right w3-right-align">
				<%if (bubler.state) { %>
					<span class="btn-lg w3-green "> 
						<span class=" icon ion-load-a"> On </span>
					</span>
				<% } else{ %> 
					<span class="btn-lg w3-light-grey ">
						<span class="icon ion-load-c"> Off </span> 
					</span>
				<% } %>
			</div>
			
			<!--  Check Alarm --> 
			<div class="w3-container w3-left w3-left-align ">
				<%if (temperature.check_temp) { %>
					<span class="btn-lg w3-green"> 
						<span class="icon ion-thermometer"> - </span>
						<span class="icon ion-checkmark-circled"> </span>
					</span>
				<% } else{ %>  
					<span class="btn btn-info btn-lg icon ion-alert w3-light-grey w3-right-align"> 
						Temperature Check Bad !!! 
					</span>
				<% } %>
			</div>
			<div class="w3-container w3-left w3-left-align ">
				<%if (light.check_light) { %>
					<span class="btn-lg w3-green"> 
						<span class=" icon ion-ios-lightbulb-outline"> - </span> <span class="icon ion-checkmark-circled"> </span>
					</span>
				<% } else{ %>  
					<span class="btn btn-info btn-lg icon ion-alert w3-deep-orange"> 
						Light bad !!! 
					</span>
				<% } %>
			</div>
			<div class="w3-container w3-left w3-left-align ">
				<%if (rgb.check_rgb) { %>
					<span class="btn-lg w3-green"> 
						<span class=" ion-android-color-palette"> - </span> <span class="icon ion-checkmark-circled"> </span>
					</span>
				<% } else{ %>  
					<span class="btn btn-info btn-lg icon ion-android-color-palette w3-deep-orange"> 
						Pb Color RGB !!! 
					</span>
				<% } %>
			</div>
		</div>
		</div>
		
		<!----------------------------------------------------------------------->
		<!---------------------------- Snapshoot Div ---------------------------->
		<!----------------------------------------------------------------------->
		<div class="w3-container w3-padding-12 ">
			<div class="w3-container w3-padding-12 w3-cyan">
				<div class="w3-col w3-top-left ">
					<div class="w3-container w3-row-padding">
						<div class="w3-left w3-rightbar">
							<span class="btn-lg icon ion-android-camera w3-padding-12 w3-indigo w3-border w3-middle"></span>
						</div>
						<div class="w3-left w3-row-padding">
							<p><b>Nb Pictures : </b><%= snapshoot.images.length%><b> / Last Snap : </b><%= snapshoot.lastone %></p>
						</div>
					</div>						
				</div>
			</div>
			
			<div class="w3-container w3-row-padding w3-padding-8 w3-cyan">
				<div class="w3-container w3-row-padding">
					<%  for(var i = 0 ; i <  snapshoot.images.length ; i++) { %>
						<div class="w3-col s2 m2 l2">
							<div class="w3-display-container">
								<img src=" <%= snapshoot.images[i].img %> " style="width:100%" onclick="onClick(this)" class="w3-images w3-hover-opacity">
								<div class="w3-display-bottomright w3-container w3-white"><%= snapshoot.images[i].index %></div>
							</div>
						</div>
					<% } %>	
				</div>
			</div>
			
			<div class="w3-container w3-row-padding w3-padding-8 w3-cyan">
						<div class="w3-display w3-container">
							
							<a href="/snapshoot" class="btn btn-info btn-lg"><span class="ion-android-camera"> <b>Take a Photo </b></span></a>
						</div>
					</div>
		</div>
		<div id="modal01" class="w3-modal" onclick="this.style.display='none'">
			<span class="w3-closebtn w3-hover-red w3-text-white w3-xxlarge w3-container w3-display-topright">&times;</span>
			<div class="w3-modal-content w3-animate-zoom">
				<img id="img01" style="width:100%">
			</div>
		</div>
		
			<script>
				function onClick(element) {
					document.getElementById("img01").src = element.src;
					document.getElementById("modal01").style.display = "block";
				}
			</script>
			
		
		
		<div class="w3-row-padding w3-padding-12 w3-border" style="height:100%">
			<span class="btn btn-info btn-lg icon ion-monitor"> Info Console : </span>
			
		</div>
	</div>
	
	</body>
</html>